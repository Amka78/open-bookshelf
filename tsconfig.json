{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@r2-opds-js/*": ["node_modules/r2-opds-js/dist/es8-es2017/src/*"],
      "@r2-utils-js/*": ["node_modules/r2-utils-js/dist/es8-es2017/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "App.js", "app", "test"],
  "extends": "expo/tsconfig.base"
}
