{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "exclude": ["android", "node_modules", "assets", "ios", "bin", "dist", "yarn.lock"],
  "include": [
    "index.js",
    "App.js",
    "app",
    "test",
    ".storybook/stories/*",
    ".storybook/stories/screens/*"
  ],
  "extends": "expo/tsconfig.base"
}
