{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    ".expo",
    ".storybook",
    "android",
    "assets",
    "bin",
    "detox",
    "dist",
    "ignite",
    "ios",
    "node_modules",
    "bun.lockb",
    ".git"
  ],
  "include": [
    "App.tsx",
    "app.config.ts",
    "app",
    "test",
    ".storybook/stories/*",
    ".storybook/stories/screens/*",
    "plugins"
  ],
  "extends": "expo/tsconfig.base"
}
